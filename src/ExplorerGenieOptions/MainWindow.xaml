<Window x:Class="ExplorerGenieOptions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExplorerGenieOptions"
        xmlns:vm="clr-namespace:ExplorerGenieShared.ViewModels"
        mc:Ignorable="d"
        Title="ExplorerGenie"
        Height="480" Width="640"
        Icon="Resources/options.ico">
    
    <Window.Resources>
        <ImageSource x:Key="imgsrcLogo">/Resources/explorergenie.png</ImageSource>
    </Window.Resources>

    <Window.DataContext>
        <vm:SettingsViewModel/>
    </Window.DataContext>

    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="42" />
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="{StaticResource imgsrcLogo}"/>
            <TextBlock Grid.Row="1" HorizontalAlignment="Center" >
                <Hyperlink Command="{Binding OpenHomepageCommand}" Foreground="#0066cc">www.martinstoeckli.ch</Hyperlink>
            </TextBlock>
        </Grid>
        <TabControl Grid.Column="1" HorizontalAlignment="Stretch" Margin="0,10,10,10" VerticalAlignment="Stretch" TabStripPlacement="Left">
            <TabItem Header="Copy path" Height="42">
                <Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Open in" Height="42">
                <Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Info" Height="42">
                <Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
